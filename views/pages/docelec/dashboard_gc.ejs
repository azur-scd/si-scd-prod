<!DOCTYPE html>
<html lang="en">
<head>
 <%- include ('../../partials/head'); -%> 
 <%- include ('../../partials/head_devextreme'); -%> 
</head>
<body>
 <% if (user.groupe !='docelec' && user.groupe !='admin' && user.groupe !='guest') { %>
    <script> document.location.href = './error' </script>
    <% } else {%>
  <div class="page-container">
  <%- include ('../../partials/sidebar_admin') -%>
    <div class="page-content">
      <%- include ('../../partials/navbar_admin') -%>
      <div class="page-content-wrap">    
        <div class="page-title">                    
          <h2><%= page %></h2>	
          <span class="label label-info label-form pull-right">Utilisateur <strong>
            <%= user.username %>
          </strong> (connecté en <strong>
            <%= user.groupe %>)
          </strong></span>
		  <input type="hidden" id="usergroup" value="<%= user.groupe %>" />
      </div> 
          <!-- start date select -->
        <div class="row">
          <div class="col-md-4">
            <div class="dx-fieldset">
              <div class="dx-field">
                  <div class="dx-field-label">Année d'exercice</div>
                  <div class="dx-field-value">
            <div id="selectYear"></div>
          </div>
          </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="dx-fieldset">
              <div class="dx-field">
                  <div class="dx-field-label">Choisir</div>
                  <div class="dx-field-value">
            <div id="selectStep"></div>
          </div>
          </div>
            </div>
          </div>
          <div class="col-md-4" id="noData">
          </div>
        </div>
         <!-- end date select -->
		   <!-- start charts row -->
          <div class="row">                            
            <div class="col-md-9">
              <div id="annualSuivi"></div>
              </div>
              <div class="col-md-3">
                <div id="poleSuivi"></div>
              </div>  
              </div>
          <!-- end charts row-->
          <!-- start tabs -->
        <div class="row">                            
           <div class="col-md-8">
            <h3>Tableau du suivi budgétaire annuel</h3>
			<div class="row">
              <div id="widgetBdd"></div>
            </div>
            <div id="containerListBdd"></div>
            </div>
            <div class="col-md-4">
              <h3>Tableau des GC (montants globaux) commencant à l'année sélectionnée</h3>
			  <div class="row">
              <div id="widgetGc"></div>
            </div>
              <div id="containerListGc"></div>
              </div>
        </div>
         <!-- end tabs -->
            </div>
          </div>
      </div>
 <% } %>
</body>
<%- include ('../../partials/script') -%>
<%- include ('../../partials/script_admin') -%>
<%- include ('../../partials/script_devextreme') -%>
<script src="./javascripts/docelec/dashboard_gc.js"></script>
<script src="./javascripts/dxchartComponents/simpleBar.js"></script>
<script src="./javascripts/dxchartComponents/pie.js"></script>
</html>